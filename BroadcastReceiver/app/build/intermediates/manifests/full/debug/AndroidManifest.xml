<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niit.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="3" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application android:label="ServiceExample" >
        <activity
            android:name="com.niit.android.LocalServiceActivity"
            android:label="Service Example" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.niit.android.RepeatingAlarmService"
            android:process=":remote" />
        <receiver
            android:name="com.niit.android.OnBootReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.niit.android.ServiceExample"
            android:enabled="true" />
    </application>

</manifest>